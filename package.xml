<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE package SYSTEM "../package.dtd">
<package version="1.0">
  <name>DB_ldap2</name>
  <summary>DB drivers for LDAP v2 and v3 database</summary>
  <description>
        DB_ldap2 and DB_ldap3 classes extend DB_common to provide DB
	compliant access to LDAP servers with protocol version 2 and 3. The
	drivers provide common DB interface as much as possible and support
	prepare/execute statements.
  </description>
  <maintainers>
    <maintainer>
      <user>dexter</user>
      <name>Piotr Roszatycki</name>
      <email>dexter@debian.org</email>
      <role>lead</role>
    </maintainer>
  </maintainers>
  <license>LGPL</license>
  <release>
    <version>0.1</version>
    <date>2003-03-06</date>
    <state>devel</state>
    <notes>Initial public release.</notes>
    <filelist>
      <dir name="/" baseinstalldir="DB">
        <file role="php" name="ldap2.php" />
        <file role="php" name="ldap3.php" />
      </dir>
    </filelist>
    <deps>
      <dep type="ext" rel="has">ldap</dep>
      <dep type="pkg" rel="has">DB</dep>
    </deps>
  </release>
</package>
